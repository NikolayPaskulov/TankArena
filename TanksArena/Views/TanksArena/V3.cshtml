
@{
    ViewBag.Title = "v3";
    Layout = "~/Views/Shared/_BabylonLayout.cshtml";
}


@section scriptsHead
{
    @* Jquery *@
    <script src="~/Scripts/libs/jquery-3.1.1.min.js" type="text/javascript"></script>

    @* SignalR *@
    <script src="~/Scripts/libs/jquery.signalR-2.2.1.min.js" type="text/javascript"></script>
    <script src="~/Scripts/signalR/hubs" type="text/javascript"></script>

    @* App *@
    <script src="~/Scripts/v3/Application.js" type="text/javascript"></script>
    <script src="~/Scripts/v3/Scene.js" type="text/javascript"></script>

    @* Common Helpers *@
    <script src="~/Scripts/common/MathHelper.js" type="text/javascript"></script>
    <script src="~/Scripts/common/KeyboardHelper.js" type="text/javascript"></script>
    <script src="~/Scripts/common/Controls.js" type="text/javascript"></script>
    <script src="~/Scripts/common/AnimationsHelper.js" type="text/javascript"></script>
    <script src="~/Scripts/common/SoundEffectsService.js" type="text/javascript"></script>

    @* Enums *@
    <script src="~/Scripts/v3/Enums/TankType.js" type="text/javascript"></script>
    <script src="~/Scripts/v3/Enums/BulletType.js" type="text/javascript"></script>

    @* Tanks *@
    <script src="~/Scripts/v3/tanks/TanksService.js" type="text/javascript"></script>
    <script src="~/Scripts/v3/tanks/TanksFactory.js" type="text/javascript"></script>
    <script src="~/Scripts/v3/tanks/Tank.js" type="text/javascript"></script>
    <script src="~/Scripts/v3/tanks/T90aTank.js" type="text/javascript"></script>

    @* Bullets *@
    <script src="~/Scripts/v3/Bullets/Bullet.js" type="text/javascript"></script>
    <script src="~/Scripts/v3/Bullets/FireBullet.js" type="text/javascript"></script>
    <script src="~/Scripts/v3/Bullets/BulletsFactory.js" type="text/javascript"></script>
    <script src="~/Scripts/v3/Bullets/BulletsManager.js" type="text/javascript"></script>

    @* Game Play *@
    <script src="~/Scripts/v3/Player.js" type="text/javascript"></script>

    @* Server *@
    <script src="~/Scripts/v3/ServerConnector.js" type="text/javascript"></script>

}

@section scriptsBody
{

    <script src="~/Scripts/v3/app.js" type="text/javascript"></script>
}

<canvas id="renderCanvas" width="800" height="600"></canvas>

